<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.demo.SignUp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Map"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:textColor="#101010"
        android:textStyle="bold"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/email_text"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="23sp"
        android:textColor="#101010"
        android:layout_below="@+id/title"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:inputType="textEmailAddress"
        android:hint="example@gamil.com"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/email_text"
        android:layout_marginRight="125dp"
        />

    <TextView
        android:id="@+id/password_text"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_below="@+id/email_text"
        android:textSize="23sp"
        android:textColor="#101010"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:hint="6 characters or more"
        android:inputType="textPassword"
        android:id="@+id/re_password"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/re_password_text"
        android:layout_marginRight="100dp"
        />

    <TextView
        android:id="@+id/re_password_text"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Retype password"
        android:layout_below="@+id/password"
        android:textSize="23sp"
        android:textColor="#101010"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:hint="6 characters or more"
        android:inputType="textPassword"
        android:id="@+id/password"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/password_text"
        android:layout_marginRight="100dp"
        />

    <Button
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:textSize="25sp"
        android:text="Login"
        android:onClick="loginBtn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button1"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don not have an account? "
            android:textColor="#101010"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/log_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up here"
            android:textColor="#4269D9"
            android:textSize="17dp" />
    </LinearLayout>

</RelativeLayout>